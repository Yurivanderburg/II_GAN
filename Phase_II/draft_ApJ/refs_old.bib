
@article{10.1093/mnras/stab2391,
	author = {Rai et al., Km Nitu},
	title = "{Radius measurement in binary stars: simulations of intensity interferometry}",
	journal = {Monthly Notices of the Royal Astronomical Society},
	volume = {507},
	number = {2},
	pages = {2813-2824},
	year = {2021},
	month = {08},
	abstract = "{Mass and radius measurements of stars are important inputs for models of stellar structure. Binary stars are of particular interest in this regard, because astrometry and spectroscopy of a binary together provide the masses of both stars as well as the distance to the system, while interferometry can both improve the astrometry and measure the radii of the stars. In this work, we simulate parameter recovery from intensity interferometry, especially the challenge of disentangling the radii of two stars from their combined interferometric signal. Two approaches are considered: separation of the visibility contributions of each star with the help of differing brightness ratios at different wavelengths, and direct fitting of the intensity correlation to a multiparameter model. Full image reconstructions is not attempted. Measurement of angular radii, angular separation, and first-order limb-darkening appears readily achievable for bright binary stars with current instrumentation.}",
	issn = {0035-8711},
	doi = {10.1093/mnras/stab2391}
}

@article{10.1093/mnras/stac2433,
	author = {Rai et al., Km Nitu},
	title = "{Simulations of astrometric planet detection in Alpha Centauri by intensity interferometry}",
	journal = {Monthly Notices of the Royal Astronomical Society},
	volume = {516},
	number = {2},
	pages = {2864-2875},
	year = {2022},
	month = {08},
	abstract = "{Recent dynamical studies indicate that the possibility of an Earth-like planet around α Cen A or B should be taken seriously. Such a planet, if it exists, would perturb the orbital astrometry by \\$\\lt \\{10\\}\\, \\{\\mu \\{\\rm as\\}\\}\\$, which is 10−6 of the separation between the two stars. We assess the feasibility of detecting such perturbations using ground-based intensity interferometry. We simulate a dedicated set-up consisting of four 40-cm telescopes equipped with photon counters and correlators with a time resolution of \\$0.1\\, \\rm ns\\$, and a sort of matched filter implemented through an aperture mask. The astrometric error from one night of observing α Cen AB is \\$\\approx 0.5\\, \\rm mas\\$. The error decreases if longer observing times and multiple spectral channels are used, as (channels × nights)−1/2.}",
	issn = {0035-8711},
	doi = {10.1093/mnras/stac2433}
}

